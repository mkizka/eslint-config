{
  "name": "@mkizka/eslint-config",
  "version": "5.1.0",
  "type": "module",
  "description": "ESLint rules for mkizka",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/eslint-config.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@8.15.5",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "pnpm -s lint --fix && prettier --write .",
    "lint": "pnpm -s build && eslint .",
    "prepare": "husky",
    "preview": "pnpm -s dlx @eslint/config-inspector@latest",
    "release": "pnpm -s build && np",
    "test": "pnpm -s build && vitest run"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "dependencies": {
    "@dword-design/eslint-plugin-import-alias": "^5.0.0",
    "@eslint/js": "^9.0.0",
    "eslint-plugin-eqeqeq-fix": "^1.0.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-tailwindcss": "^3.17.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "globals": "^15.0.0",
    "typescript-eslint": "^7.6.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.12.5",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "np": "^10.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-pkg": "^0.18.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "eslint --fix"
  }
}

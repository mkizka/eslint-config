{
  "name": "@mkizka/eslint-config",
  "version": "6.0.0",
  "type": "module",
  "description": "ESLint rules for mkizka",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/eslint-config.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "pnpm -s lint --fix && prettier --write .",
    "lint": "pnpm typecheck && eslint .",
    "prepare": "husky",
    "preview": "pnpm -s dlx @eslint/config-inspector@latest",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "dependencies": {
    "@dword-design/eslint-plugin-import-alias": "^5.1.1",
    "@eslint/js": "^9.22.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-plugin-eqeqeq-fix": "^1.0.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "jsonc-parser": "^3.3.1",
    "typescript-eslint": "^8.27.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.28.1",
    "@tsconfig/node-lts": "22.0.1",
    "@types/node": "22.13.11",
    "eslint": "9.23.0",
    "husky": "9.1.7",
    "jiti": "2.4.2",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "prettier-plugin-pkg": "0.18.1",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "eslint --fix"
  }
}

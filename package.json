{
  "name": "@mkizka/eslint-config",
  "version": "7.1.1",
  "type": "module",
  "description": "ESLint rules for mkizka",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/eslint-config.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "pnpm -s lint --fix && prettier --write .",
    "lint": "pnpm typecheck && eslint .",
    "prepare": "husky",
    "preview": "pnpm -s dlx @eslint/config-inspector@latest",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "dependencies": {
    "@dword-design/eslint-plugin-import-alias": "^6.0.3",
    "@eslint/js": "^9.29.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-plugin-eqeqeq-fix": "^1.0.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "jsonc-parser": "^3.3.1",
    "typescript-eslint": "^8.34.1"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@tsconfig/node-lts": "22.0.2",
    "@types/node": "24.3.0",
    "eslint": "9.33.0",
    "husky": "9.1.7",
    "jiti": "2.5.1",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-pkg": "0.21.2",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "eslint --fix"
  }
}
